<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_blue"
    android:orientation="vertical"
    android:weightSum="2">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_0"
        android:layout_weight="1">

        <RelativeLayout
            android:id="@+id/rl_1"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/temperature_center_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="50"
                android:inputType="number"
                android:maxLength="4"
                android:textColor="#fff"
                android:textColorHint="#fff"
                android:textSize="40sp" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginTop="2dp"
                android:layout_toRightOf="@id/temperature_center_text"
                android:src="@drawable/icon_temperature" />
        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_0"
        android:layout_weight="1">

        <RelativeLayout
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.vincent.sourvide.widget.Anticlockwise
                android:id="@+id/set_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@null"
                android:inputType="number"
                android:text="45:45"
                android:textColor="#fff"
                android:textColorHint="#fff"
                android:textSize="40sp" />

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginBottom="-2dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@id/set_time"
                android:src="@drawable/icon_time" />
        </RelativeLayout>

    </RelativeLayout>


</LinearLayout>