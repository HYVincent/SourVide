<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    android:background="@drawable/gb_w" 
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
  
    <LinearLayout 
        android:gravity="center_horizontal" 
        android:orientation="vertical" 
        android:padding="20.0dip" 
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content" 
        android:layout_marginTop="10.0dip">
        
        <ImageView 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            android:src="@drawable/logo0" />
        <LinearLayout 
            android:orientation="vertical" 
            android:background="@drawable/circle_input_bg" 
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content" 
            android:layout_marginTop="45.0dip">
            <LinearLayout 
                android:gravity="center_vertical" 
                android:layout_width="fill_parent" 
                android:layout_height="50.0dip">
                <TextView 
                    android:textSize="16.0sp" 
                    android:textColor="@color/color_gray" 
                    android:layout_width="wrap_content" 
                    android:layout_height="wrap_content" 
                    android:layout_marginLeft="5.0dip" 
                    android:text="@string/name" />
                <EditText 
                    android:textSize="16.0sp"
                     android:textColor="@color/color_black" 
                     android:gravity="center_vertical" 
                     android:id="@+id/user_name" 
                     android:background="@null"
                     android:layout_width="fill_parent" 
                     android:layout_height="fill_parent" 
                     android:layout_marginLeft="5.0dip" 
                     android:layout_marginRight="5.0dip" 
                     android:singleLine="true" />
            </LinearLayout>
            
            <View 
                android:background="#7b333333" 
                android:layout_width="fill_parent" 
                android:layout_height="1.0px" />
            
            <LinearLayout 
                android:gravity="center_vertical" 
                android:layout_width="fill_parent" 
                android:layout_height="50.0dip">
                <TextView 
                    android:textSize="16.0sp" 
                    android:textColor="@color/color_gray" 
                    android:layout_width="wrap_content" 
                    android:layout_height="wrap_content" 
                    android:layout_marginLeft="5.0dip" 
                    android:text="@string/qr_info" />
                <TextView 
                    android:textSize="16.0sp" 
                    android:textColor="@color/color_black" 
                    android:gravity="center_vertical" 
                    android:id="@+id/serial_number" 
                    android:background="@null" 
                    android:layout_width="fill_parent" 
                    android:layout_height="fill_parent" 
                    android:layout_marginLeft="5.0dip" 
                    android:layout_marginRight="5.0dip" 
                    android:singleLine="true" />
            </LinearLayout>
            
            <LinearLayout 
                android:gravity="center_vertical" 
                android:orientation="horizontal"
                 android:id="@+id/device_lock_layout" 
                 android:visibility="gone"
                 android:layout_width="fill_parent" 
                 android:layout_height="50.0dip">
                <TextView 
                    android:textSize="16.0sp" 
                    android:textColor="@color/color_gray" 
                    android:layout_width="fill_parent" 
                    android:layout_height="wrap_content" 
                    android:layout_marginLeft="5.0dip" 
                    android:text="@string/device_lock" 
                    android:layout_weight="1.0" />
                <ImageView 
                    android:id="@+id/lock" 
                    android:layout_width="30.0dip" 
                    android:layout_height="30.0dip" 
                    android:layout_marginRight="5.0dip" 
                    android:src="@drawable/on" 
                    android:layout_weight="0.0" />
            </LinearLayout>
        </LinearLayout>
        
        <LinearLayout 
            android:gravity="center_vertical" 
            android:orientation="vertical" 
            android:background="@drawable/circle_input_bg" 
            android:visibility="gone"
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content" 
            android:layout_marginTop="10.0dip">
            <LinearLayout 
                android:gravity="center_vertical" 
                android:layout_width="fill_parent" 
                android:layout_height="50.0dip">
                <TextView 
                    android:textSize="16.0sp" 
                    android:textColor="@color/color_gray" 
                    android:layout_width="wrap_content" 
                    android:layout_height="wrap_content" 
                    android:layout_marginLeft="5.0dip" 
                    android:text="@string/mac" />
                <TextView 
                    android:textSize="16.0sp" 
                    android:textColor="@color/color_black" 
                    android:gravity="center_vertical" 
                    android:id="@+id/mac" 
                    android:background="@null" 
                    android:layout_width="fill_parent" 
                    android:layout_height="fill_parent" 
                    android:layout_marginLeft="5.0dip" 
                    android:layout_marginRight="5.0dip" 
                    android:singleLine="true" />
            </LinearLayout>
            <View 
                android:background="#7b333333" 
                android:layout_width="fill_parent" 
                android:layout_height="1.0px" />
            <LinearLayout 
                android:gravity="center_vertical" 
                android:layout_width="fill_parent" 
                android:layout_height="50.0dip">
                <TextView 
                    android:textSize="16.0sp" 
                    android:textColor="@color/color_gray" 
                    android:layout_width="wrap_content" 
                    android:layout_height="wrap_content" 
                    android:layout_marginLeft="5.0dip" 
                    android:text="@string/qr_info" />
                <TextView 
                    android:textSize="16.0sp" 
                    android:textColor="@color/color_black" 
                    android:gravity="center_vertical" 
                    android:id="@+id/serial_number2" 
                    android:background="@null" 
                    android:layout_width="fill_parent" 
                    android:layout_height="fill_parent" 
                    android:layout_marginLeft="5.0dip" 
                    android:layout_marginRight="5.0dip" 
                    android:singleLine="true" />
            </LinearLayout>
        </LinearLayout>
        <Button 
            android:textSize="21.0sp" 
            android:textColor="#ffffffff" 
            android:id="@+id/btn_save" 
            android:background="@drawable/btn_normal" 
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content" 
            android:layout_marginTop="40.0dip" 
            android:text="@string/yes" />
    </LinearLayout>
</RelativeLayout>